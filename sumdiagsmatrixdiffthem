#include <math.h>
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <assert.h>
#include <limits.h>
#include <stdbool.h>

int main(){
    int n; 
    scanf("%d",&n);
    int a[n][n];
    int sumurbl = 0;
    int sumlrul = 0;
    for(int a_i = 0; a_i < n; a_i++){
       for(int a_j = 0; a_j < n; a_j++){
          
           scanf("%d",&a[a_i][a_j]);
           if(a_i == a_j){
               sumlrul += a[a_i][a_j];
               if(a_i + a_j == n-1){
                   sumurbl += a[a_i][a_j];
               }
           }
           else if (a_i + a_j == n-1){
               sumurbl += a[a_i][a_j];
           }
       }
    }
    printf("%d", abs(sumlrul - sumurbl));
    return 0;
}
